/* primitive types:
 byte (8 bits), short (16 bits), int (32 bits), long (64 bits), float (=real numbers with decimal points, 32 bits), double (64 bits), char, boolean */


package academy.learnprogramming;

public class Main {

    public static void main(String[] args) {

        byte myByte = 127;

        short myShort = 32767;

        int myInteger = 2147483647;

        long myLongValue = 9223372036854775807L;

        // checking the minimum and maximum values //

        int myMinIntValue = Integer.MIN_VALUE - 1; // turns into max value //
        // why is Integer above? //
        System.out.println("Integer Minimum Value = " + myMinIntValue);

        long myMaxLongValue = Long.MAX_VALUE;
        System.out.println("Long Maximum Value = " + myMaxLongValue);
        long the_New_Long = 777_777_777_777_7777L; // why the longer numbers don't work? //

        // floats & doubles; floats are doubles by default //

        float myMinFloatNumber = Float.MIN_VALUE;
        float myMaxFloatNumber = Float.MIN_VALUE;
        System.out.println("Float minimum value: " + myMinFloatNumber);
        System.out.println("Float maximum value: " + myMaxFloatNumber);

        double myMinDoubleNumber = Double.MIN_VALUE;
        double myMaxDoubleNumber = Double.MIN_VALUE;
        System.out.println("Double minimum value: " + myMinDoubleNumber);
        System.out.println("Double maximum value: " + myMaxDoubleNumber);

        float theNewFloat = 5f / 3;
        double theNewDouble = 7.0 / 3;
        System.out.println(theNewFloat);
        System.out.println(theNewDouble);

        // casting - converting a number from one type to another //

        int myNewInteger = 10;
        byte castedInteger = (byte) (myNewInteger - 2);
        System.out.println("The byte casted is " + castedInteger);


        float my2Float = (float) 12.25;
        float myFloat = 12.25f; // preferred way of casting//
        double myDouble = 12.26;

        // how to check the type of a value? //

    }
}

// primitive types challenge //

package academy.learnprogramming;

public class Main {

    public static void main(String[] args) {

        double pounds = 4;
        double kilograms = pounds * 0.45359237;
        System.out.println("The pounds converted into kilograms is: " + kilograms);
    }
}


